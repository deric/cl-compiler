PROGRAM
  VARS
    a Date
       x int
    y int
	z int
  ENDVARS
	sday(a,7)
smonth(a,2)
syear(a,1987)
	x:=day(a)
        y:=month(a)
z:=year(a)
	writeln(x)
writeln(y)
writeln(z)
a:=#7/2/1987
a:=#7/2/1900
a:=#6/4/1987
a:=#18/11/1987
	x:=day(a)
        y:=month(a)
z:=year(a)
	writeln(x)
writeln(y)
writeln(z)
 EndProgram

